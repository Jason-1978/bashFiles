### BASH COMMAND ALIASES---->

alias root="cd /"
	# changes directory to 'root directory'
alias rm="rm -ir"
	# adds confirmation question before running this command
alias mv="mv -i"
	# adds confirmation question before running this command
alias cp="cp -i"
	# adds confirmation question before running this command
alias grep="grep --color"
	# adds color in grep
alias ls="ls -al"
	# adds / directory, * executable, @ symbolic link, = socket, % whiteout, | FIFO
alias lso="ls -AoFG"
	# -Ao alias for ls
alias less="less -M"
	# adds file path & % at bottom of each page in less

alias python="$echo python2.7"

alias python="$echo python3.7"

### BASH SYSTEM ALIASES---->

alias blogin="$exec bash --login"
	# restarts bash
alias sbash="source ~/.bash_profile"
	# sources _profile rc Alias Prompt etc.
alias shutdown="sudo shutdown -h now"
	# immediate shutdown
alias reboot="sudo shutdown -r now"
	# immediate reboot
alias python3="/usr/bin/python3.7"
	# python3 default set

