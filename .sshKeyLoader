#!/bin/bash

#############################################

# Author: Jason Kralik
# Purpose: Load .ssh keys when shell is opened
#  
# FileName: .sshKeyLoader
# Created: 08/13/18 
# Modifed: 

#############################################

# NOTE: This may not be the best way to facilitate this but it works. It seems like more of a bandaid than a fix.

declare -a sshPrivateKeys=(rpi_3b rpi_0w Jasons-MacBook-Pro.local) 
systemName=$(hostname)

echo "...attempting to load ssh key(s) for $systemName:"


for i in "${sshPrivateKeys[@]}"
do
	if [ $i != $systemName ]; then
		if [ -f ~/.ssh/${i}_rsa ]; then
			ssh-add ~/.ssh/${i}_rsa
			echo "	SSH key loaded for $i host."
		else
			echo "	ERROR: ${i}_rsa failed to load."
		fi
	fi
done
